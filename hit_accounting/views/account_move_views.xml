<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    
    <record id="account_move_view_form_inherit" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_info_group']" position="after">
                <group name="other_details" string="Other Details">
                    <field name="agreement_date" />
                    <field name="agreement_doc" />
                    <field name="nomer_faktur" />
                    <field name="payment_voucher" />
                    <field name="tanggal_bukti_potong" />
                    <field name="tanggal_faktur_pajak" />
                </group>
            </xpath>
            <xpath expr="/form/sheet/notebook[1]" position="after">
                <group name="footer">
                    <group name="left">
                        <field name="move_type" invisible="1"/>
                    </group>
                    <group name="right">
                        <field name="signature" widget="signature" attrs="{'invisible': [('move_type','!=','out_invoice')]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    

    <record id="account_move_view_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="nomer_faktur" />
            </xpath>
        </field>
    </record>
    
    </data>
</odoo>

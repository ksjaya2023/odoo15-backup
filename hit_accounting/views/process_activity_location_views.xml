<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
   
    <record id="view_activity_location_tree" model="ir.ui.view">
        <field name="name">view.activity.location.tree</field>
        <field name="model">hit.activity.location</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="activity_location_tree" create="true" delete="true" edit="true">
                <field name="name"/>
                <field name="process_activity_id" />
                <field name="activity_description" />
                <field name="location_id" />
                <field name="location_description" />
                <field name="active" optional="1"/>
                <field name="create_date" optional="1"/>
                <field name="create_uid" optional="1"/>
            </tree>
        </field>
    </record>
    
    
    <record id="view_activity_location_form" model="ir.ui.view">
        <field name="name">view.activity.location.form</field>
        <field name="model">hit.activity.location</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="activity_location_form" create="true" delete="true" edit="true">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline"
                                placeholder="name" invisible="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="process_activity_id" />
                            <field name="activity_description" />
                            <field name="location_id" />
                            <field name="location_description" />
                        </group>
                        <group>
                            <field name="create_date" />
                            <field name="create_uid" />
                        </group>
                    </group>
                    <notebook>
                        <page name="children" string="Children">
                            <field name="location_department_ids" widget="section_one2many">
                                <tree editable="bottom">
                                    <field name="department_id" />
                                    <field name="department_description" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="change_theme_id_inherit" name="hit_change_theme" inherit_id="web.layout">
            <xpath expr="//head" position="inside">
                <style>
                    .o_main_navbar {background-color: #C2847A;border-bottom: 0px;}
                    .o_main_navbar .show .dropdown-toggle {background-color: #C2847A;}
                    .o_main_navbar > ul > li > a:hover, .o_main_navbar 
                                > ul > li > label:hover {background-color: #B5B682;}
                    .o_main_navbar > a:hover, .o_main_navbar > a:focus, .o_main_navbar 
                                > button:hover, .o_main_navbar 
                                > button:focus {background-color: #B5B682;color: inherit;}
                    .o_main_navbar > a:hover, .o_main_navbar > a:focus, .o_main_navbar 
                                > button:hover, .o_main_navbar 
                                > button:focus {background-color: #B5B682;color: inherit;}  
                    .o_menu_apps .o_menu_sections > li > a:hover, .o_menu_apps .o_menu_sections > li.active > a, .o_menu_apps .o_menu_sections > li > a:focus {
                        background-color: #EFECCA;
                        color: #EFECCA;
                    } 
                </style>
            </xpath>
        </template>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="pg_view_account_asset_purchase_tree_inherit" model="ir.ui.view">
            <field name="inherit_id" ref="account_asset.view_account_asset_purchase_tree"/>
            <field name="mode">extension</field>
            <field name="model">account.asset</field>
            <field name="name">pg_view_account_asset_purchase_tree_inherit</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="x_studio_asset_description"/>
                    <field name="create_date" optional="show"/>
                    <field name="x_studio_asset_types" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="pg_account_asset_view_form_inherit" model="ir.ui.view">
            <field name="name">account.asset.view.form.inherit</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                    <attribute name="required">1</attribute>
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data >
        <record id="hit_account_payment_view_model_form" model="ir.ui.view">
            <field name="name">hit.account.payment.view.model.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="advance"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="account_move_id"/>
                    <field name="analytic_account_id" required="1" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>
        <record id="hit_account_payment_view_model_tree" model="ir.ui.view">
            <field name="name">hit.account.payment.view.model.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="journal_payment_state" widget="badge" decoration-info="journal_payment_state == 'draft'" decoration-warning="journal_payment_state == 'reversed'" decoration-success="journal_payment_state == 'posted'" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- SITE -->
        <record id="pg_md_site_view_tree" model="ir.ui.view">
            <field name="name">Site Master Data List</field>
            <field name="model">md.site</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                    <field name="company_id" />
                    <field name="active" widget="boolean_toggle"/>
                    <field name="create_uid" optional="show"/>
                    <field name="create_date" optional="hide"/>
                </tree>
            </field>
        </record>
        <record id="pg_md_site_view_form" model="ir.ui.view">
            <field name="name">Site Master Data Form</field>
            <field name="model">md.site</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline" placeholder="name" />
                            </h1>
                        </div>
                        <group>
                            <field name="company_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pg_md_site_search" model="ir.ui.view">
            <field name="name">Site Master Data Search</field>
            <field name="model">md.site</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                </search>
            </field>
        </record>
        <record id="pg_md_site_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Site Master Data</field>
            <field name="res_model">md.site</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Add a new record to get started.
            </p>
                <p>
                Welcome to Site Master Data.
            </p>
            </field>
        </record>
        <menuitem id="pg_menu_master_data" name="Master Data" parent="account.menu_finance_configuration" sequence="0"/>
        <menuitem id="pg_menu_md_site" name="Site" parent="pg_menu_master_data" action="pg_md_site_act_window"/>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pg_stock_view_picking_type_form_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_picking_type_form_inherited</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="operation_category" />
                </xpath>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="is_consignment" />
                </xpath>
                <xpath expr="//field[@name='show_reserved']" position="after">
                    <field name="not_manual_transfer" attrs="{'invisible': [('operation_category', '!=', 'out')]}"/>
                </xpath>
            </field>
        </record>
        <record id="pg_stock_view_warehouse_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_warehouse_inherited</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="site_id" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>
        <record id="pg_stock_view_picking_form_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_picking_form_inherited</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_done']" position="before">
                    <div class="o_td_label">
                        <label for="custom_backdate" string="Issue Date" style="font-weight:bold;"
                                attrs="{'invisible': [('operation_category', 'not in', ['out', 'rev', 'int'])]}"/>
                        <label for="custom_backdate" string="Receive Date" style="font-weight:bold;"
                                attrs="{'invisible': [('operation_category', 'not in', ['in', 'ret'])]}"/>
                    </div>
                    <field name="custom_backdate" nolabel="1"/>
                </xpath>
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="operation_category" invisible="1"/>
                    <field name="is_consignment" invisible="1"/>
                    <field name="purchase_request_id" invisible="1"/>
                    <field name="purchase_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='owner_id']" position="attributes">
                    <attribute name="attrs">{'required': [('is_consignment', '=', True)], 'invisible': [('picking_type_code', '!=', 'incoming')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <!-- for testing purpose, please comment button helper again -->
                    <!-- <button name="button_validate" string="VALIDATE HELPER" type="object"/> -->
                    <!-- <button name="action_set_quantities_to_reservation" string="SET QTY HELPER" type="object"/> -->
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']//field[@name='product_id']" position="after">
                    <field name="id" invisible="1"/>
                    <field name="analytic_account_id" options="{'no_create': True}" placeholder="Set before saving"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']//field[@name='product_uom']" position="before">
                    <field name="qty_done"/>
                </xpath>
            </field>
        </record>
        <record id="pg_stock_view_move_form_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_move_form_inherited</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reference']" position="after">
                    <field name="analytic_account_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
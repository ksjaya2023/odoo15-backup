<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pg_stock_view_picking_type_form_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_picking_type_form_inherited</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="operation_category" />
                </xpath>
            </field>
        </record>
        <record id="pg_stock_view_warehouse_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_warehouse_inherited</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="site_id" />
                </xpath>
            </field>
        </record>
        <record id="pg_stock_view_picking_form_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_picking_form_inherited</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="operation_category" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <!-- for testing purpose, please comment button helper again -->
                    <!-- <button name="button_validate" string="VALIDATE HELPER" type="object"/> -->
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']//field[@name='product_id']" position="after">
                    <field name="analytic_account_id" attrs="{'column_invisible': [('parent.operation_category', 'not in', ('in', 'out'))]}"/>
                </xpath>
            </field>
        </record>
        <record id="pg_stock_view_move_form_inherited" model="ir.ui.view">
            <field name="name">pg_stock_view_move_form_inherited</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form" />
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reference']" position="after">
                    <field name="analytic_account_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
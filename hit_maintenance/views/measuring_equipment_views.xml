<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    
    <record id="view_measuring_equipment_tree" model="ir.ui.view">
        <field name="name">view.measuring.equipment.tree</field>
        <field name="model">measuring.equipment</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="measuring_equipment_tree" create="true" delete="true" edit="true">
                <field name="id" optional="1"/>
                <field name="equipment_id" optional="1"/>
                <field name="measuring_date" optional="1"/>
                <field name="measuring_type" optional="0"/>
                <field name="reset" optional="0"/>
                <field name="hm_awal" optional="0"/>
                <field name="current_hm" optional="0"/>
                <field name="delta" optional="0"/>
                <field name="hourmeter" optional="0"/>
                <field name="create_uid" optional="0"/>
                <field name="create_date" optional="0"/>
            </tree>
        </field>
    </record>
    
    
    <record id="view_measuring_equipment_form" model="ir.ui.view">
        <field name="name">view.measuring.equipment.form</field>
        <field name="model">measuring.equipment</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="measuring_equipment_form" create="true" delete="true" edit="true">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline"
                                placeholder="name" />
                        </h1>
                    </div>
                    <group>
                        <group name="measuring_equipment" string="Measuring Equipment">
                            <field name="equipment_id" />
                            <field name="measuring_type" />
                            <field name="hm_awal" />
                            <field name="current_hm" />
                            <field name="delta" />
                            <field name="hourmeter" />
                        </group>
                        <group name="details" string="Details">
                            <field name="reset" />
                            <field name="measuring_date" />
                            <field name="create_date" />
                            <field name="create_uid" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_measuring_equipment_act_window" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Measuring Equipment</field>
        <field name="res_model">measuring.equipment</field>
        <field name="view_mode">tree,form</field>

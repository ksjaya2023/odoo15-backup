    <data>
    
   
    <!-- Tree view for "reservation" -->
    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">view.reservation.tree</field>
        <field name="model">reservation</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="reservation_tree" create="true" delete="true" edit="true">
                <field name="name" optional="1"/>
                <field name="equipment" />
                <field name="status" />
                <field name="value" />
                <field name="create_date" optional="1"/>
                <field name="create_uid" optional="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Form view for "reservation" -->
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">view.reservation.form</field>
        <field name="model">reservation</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="reservation_form" create="true" delete="true" edit="true">
                <header>
                    <field name="status" widget="statusbar" clickable="0"/>
                </header>
                <sheet>
                    <field name="kanban_state" widget="state_selection"/>
                    <field class="oe_avatar" widget="image" name="image"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline"
                                placeholder="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="work_order" />
                            <field name="equipment" />
                            <field name="analytic_account_id" />
                            <field name="reservation_type" />
                            <field name="description" />
                        </group>
                        <group>
                            <field name="create_date" />
                            <field name="create_uid" />
                            <field name="done_date" />
                        </group>
                    </group>
                    <notebook>
                        <page name="details" string="Details">
                            <field name="reservation_line_ids" widget="section_one2many">
                                <tree editable="bottom">
                                    <field name="product_id" />
                                    <field name="quantity" />
                                    <field name="uom" />
                                    <field name="price" />
                                    <field name="total_price" />
                                </tree>
                            </field>
                            <group name="footer">
                                <group name="left">
                                </group>
                                <group name="right">
                                    <field name="value"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    

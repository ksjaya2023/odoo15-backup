<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">view.service.type.tree</field>
        <field name="model">service.type</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="service_type_tree" create="true" delete="true" edit="true">
                <field name="name"/>
                <field name="service_amount" />
                <field name="active" optional="1"/>
                <field name="create_date" optional="0"/>
                <field name="create_uid" optional="0"/>
            </tree>
        </field>
    </record>
    
    
    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">view.service.type.form</field>
        <field name="model">service.type</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="service_type_form" create="true" delete="true" edit="true">
                <header>
                </header>
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <!-- <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" icon="fa-random" type="action" name="equipment_count_brand">

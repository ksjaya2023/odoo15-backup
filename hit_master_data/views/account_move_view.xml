<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <!-- account.move inherit form view -->
    <record id="account_move_form_inherit_wbs" model="ir.ui.view">
      <field name="name">account.move.inherit.view.wbs</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
          <field name="m_wbs_code" />
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="contract_id" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund'))]}" domain="[('state', '=', 'active')]" />
        </xpath>
      </field>
    </record>
  </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="wbs_master_data_form">
      <field name="name">WBS Form</field>
      <field name="model">wbs.master.data</field>
      <field name="arch" type="xml">
        <form>
          <sheet string='Create WBS'>
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="WBS Code"/>            
              </h1>
            </div>
            <group>
              <group>
                <field name="wbs_description"/>
                <field name="is_active"/>
              </group>
              <group>
                <field name="project_id"/>
                <field name="project_name"/>
              </group>
            </group>
            <field name="notes" placeholder="Add your notes here..."/>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="wbs_master_data_list">
      <field name="name">WBS List</field>
      <field name="model">wbs.master.data</field>
      <field name="arch" type="xml">
        <tree>
          <field name="project_id"/>
          <field name="name"/>
          <field name="wbs_description"/>
          <field name="is_active"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_wbs_view">
      <field name="name">WBS Master Data</field>
      <field name="res_model">wbs.master.data</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_wbs_master_data" parent="hit_master_data.root_master_data" name="WBS" 
      sequence="2" action="action_wbs_view"/>
	</data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="pr_po_dashboard_view_graph" model="ir.ui.view" >
			<field name="name">PR PO Dashboard Graph</field>
			<field name="model">purchase.order</field>
			<field name="type">graph</field>
			<field name="arch" type="xml">
				<graph string="Invoice Status" type="pie" sample="1">
					<field name="invoice_status" />
				</graph>
			</field>
		</record>
		<record id="pr_po_dashboard_action_window" model="ir.actions.act_window">
			<field name="name">Dashboard Report</field>
			<field name="res_model">purchase.order</field>
			<field name="view_mode">graph</field>
		</record>
		<!-- board.board model view -->
		<record id="board_board_dashboard_view_form" model="ir.ui.view">
			<field name="name">pr_po_dashboard_view_form</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="PR PO Dashboard">
					<board style="1-2">
						<column>
							<action string="Graph View" name="%(pr_po_dashboard_action_window)d"/>
						</column>
					</board>
				</form>
			</field>
		</record>
		<!-- board.board window action -->
		<record id="board_board_dashboard_action_window" model="ir.actions.act_window">
			<field name="name">My Dashboard</field>
			<field name="res_model">board.board</field>
			<field name="view_mode">form</field>
			<field name="usage">menu</field>
			<field name="view_id" ref="board_board_dashboard_view_form"/>
		</record>
		<!-- menuitem -->
		<menuitem id="pr_po_dashboard_report_root" name="Dashboard Report" parent="purchase.menu_purchase_root"/>
		<menuitem id="pr_po_dashboard_menu" name="PR PO Dashboard" action="board_board_dashboard_action_window" parent="pr_po_dashboard_report_root"/>
	</data>
</odoo>
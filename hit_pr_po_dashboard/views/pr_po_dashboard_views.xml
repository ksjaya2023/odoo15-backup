<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="hit_pr_po_dashboard_graph" model="ir.ui.view" >
			<field name="name">PR PO Dashboard Graph</field>
			<field name="model">purchase.order</field>
			<field name="type">graph</field>
			<field name="arch" type="xml">
				<graph string="Invoice Status" type="pie" sample="1">
					<field name="invoice_status" />
				</graph>
			</field>
		</record>
		<record id="pr_po_dashboard_view_form" model="ir.ui.view">
			<field name="name">pr_po_dashboard_view_form</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="PR PO Dashboard">
					<board style="1-2">
						<column>
						</column>
					</board>
				</form>
			</field>
		</record>
		<record id="hit_open_board_dashboard_action" model="ir.actions.act_window">
			<field name="name">My Dashboard</field>
			<field name="res_model">board.board</field>
			<field name="view_mode">form</field>
			<field name="usage">menu</field>
			<field name="view_id" ref="pr_po_dashboard_view_form"/>
		</record>
		<record id="hit_pr_po_dashboard_report_invoice_status_action_window" model="ir.actions.act_window">
			<field name="name">Dashboard Report</field>
			<field name="res_model">purchase.order</field>
			<field name="view_mode">graph,tree</field>
		</record>
		<record id="hit_pr_po_dashboard_action_window" model="ir.actions.act_window">
			<field name="name">Dashboard Report</field>
			<field name="res_model">purchase.order</field>
			<field name="view_mode">graph</field>
		</record>
		<menuitem id="pr_po_dashboard_report" name="Dashboard Report" parent="purchase.menu_purchase_root"/>
		<menuitem id="pr_po_dashboard_report_invoice_status" name="Invoice Status" action="hit_pr_po_dashboard_report_invoice_status_action_window" parent="pr_po_dashboard_report"/>
		<menuitem id="hit_open_board_dashboard_test" name="Test Dashboard" action="hit_open_board_dashboard_action" parent="pr_po_dashboard_report"/>
	</data>
</odoo>
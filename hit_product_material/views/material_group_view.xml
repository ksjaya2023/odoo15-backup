<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="material_group_form">
      <field name="name">Material Group</field>
      <field name="model">material.group</field>
      <field name="arch" type="xml">
        <form>
          <sheet string='Create Material Group'>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <field name="description"/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="material_group_data_list">
      <field name="name">Material Type</field>
      <field name="model">material.group</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_material_group_view">
      <field name="name">Material group</field>
      <field name="res_model">material.group</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="material_master_data_root" name="Material" parent="hit_master_data.root_master_data" sequence="5"/>
    <menuitem id="menu_material_group" parent="material_master_data_root" name="Material Group" sequence="4" action="action_material_group_view"/>
  </data>
</odoo>
<odoo>
  <data>
    <!-- product.template.form.inherit inherit form view -->
    <record id="product_template_form_inherit_view" model="ir.ui.view">
      <field name="name">product.template.form.inherit.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <!-- Add your xpath here -->
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]" position="inside">
          <page string="Additional Info">
            <group>
              <group>
                <field name="material_type_id"/>
                <field name="material_group_id"/>
              </group>
              <group>
                <field name="cbs_account"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
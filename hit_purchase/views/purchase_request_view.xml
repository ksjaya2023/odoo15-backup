<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <!-- purchase.request inherit form view -->
    <record id="inherit_purchase_request_view" model="ir.ui.view">
      <field name="name">purchase.request.inherit.view.form</field>
      <field name="model">purchase.request</field>
      <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='button_draft']" position="attributes">
          <attribute name="groups">purchase_request.group_purchase_request_manager,purchase_request.group_purchase_request_user</attribute>
        </xpath>
        <xpath expr="//button[@name='button_approved']" position="attributes">
          <attribute name="groups">purchase_request.group_purchase_request_manager,purchase_request.group_purchase_request_user</attribute>
          <attribute name="studio_approval">False</attribute>
        </xpath>
        <xpath expr="//button[@name='button_rejected']" position="attributes">
          <attribute name="groups">purchase_request.group_purchase_request_manager,purchase_request.group_purchase_request_user</attribute>
        </xpath>
        <xpath expr="//field[@name='requested_by']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="force_save">True</attribute>
          <attribute name="readonly">1</attribute>
          <attribute name="string">User ID</attribute>
        </xpath>
        <xpath expr="//field[@name='requested_by']" position='after'>
          <field name="project_id"/>
          <field name="wbs_id"/>
          <field name="purchasing_group_id"/>
          <field name="requester"/>
        </xpath>
        <xpath expr="//field[@name='assigned_to']" position='attributes'>
          <attribute name='invisible'>1</attribute>
        </xpath>
        <xpath expr="//field[@name='group_id']" position='attributes'>
          <attribute name='invisible'>1</attribute>
        </xpath>
        <xpath expr="//field[@name='description']" position='attributes'>
          <attribute name='required'>1</attribute>
          <attribute name='string'>RO No.</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
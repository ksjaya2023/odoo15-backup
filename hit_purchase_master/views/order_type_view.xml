<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <!-- Purchaser View form view -->
    <record id="order_type_view_form" model="ir.ui.view">
      <field name="name">order.type.view.form</field>
      <field name="model">order.type</field>
      <field name="arch" type="xml">
        <form string="Create Order Type">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Name..."/>
              </h1>
            </div>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <!-- purchaser tree view -->
    <record id="order_type_view_tree" model="ir.ui.view">
      <field name="name">order.type.view.tree</field>
      <field name="model">order.type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- purchaser action window -->
    <record id="order_type_action" model="ir.actions.act_window">
      <field name="name">Order Type</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">order.type</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          No Data
        </p>
        <p>
          Silahkan masukkan data 
        </p>
      </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="order_type_menu_act" name="Order Type" parent="master_data_menu_root" action="order_type_action" sequence="4"/>
    <menuitem id="order_type_menu_act_2" name="Order Type" parent="master_data_menu_root_2" action="order_type_action" sequence="4"/>

  </data>
</odoo>
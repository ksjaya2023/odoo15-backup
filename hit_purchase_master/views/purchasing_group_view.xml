<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <!-- Scope Of Supply form view -->
    <record id="purchasing_group_view_form" model="ir.ui.view">
      <field name="name">purchasing.group.view.form</field>
      <field name="model">purchasing.group</field>
      <field name="arch" type="xml">
        <form string="Create Purchasing Group">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <field name="purchaser_id"/>
              <field name="picking_type_id"/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <!-- scope of supplu tree view -->
    <record id="purchasing_group_view_tree" model="ir.ui.view">
      <field name="name">puchasing.group.view.tree</field>
      <field name="model">purchasing.group</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="purchaser_id"/>
          <field name="picking_type_id"/>
        </tree>
      </field>
    </record>

    <!-- purchaser action window -->
    <record id="purchasing_group_action" model="ir.actions.act_window">
      <field name="name">Purchasing Group</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">purchasing.group</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          No Data
        </p>
        <p>
          Silahkan masukkan data 
        </p>
      </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="purchasing_group_menu_act" name="Purchasing Group" parent="master_data_menu_root" action="purchasing_group_action" sequence="2"/>
    <menuitem id="purchasing_group_menu_act_2" name="Purchasing Group" parent="master_data_menu_root_2" action="purchasing_group_action" sequence="2"/>

  </data>
</odoo>
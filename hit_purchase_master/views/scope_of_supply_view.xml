<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <!-- Scope Of Supply form view -->
    <record id="scope_of_supply_view_form" model="ir.ui.view">
      <field name="name">scope.of.supply.view.form</field>
      <field name="model">scope.of.supply</field>
      <field name="arch" type="xml">
        <form string="Create Scope Of Supply">
          <sheet>
            <group col="4">
              <field name="name"/>
              <field name="fullname"/>
              <field name="active" widget="boolean_toggle"/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <!-- scope of supplu tree view -->
    <record id="scope_of_supply_view_tree" model="ir.ui.view">
      <field name="name">scope.of.supply.view.tree</field>
      <field name="model">scope.of.supply</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fullname"/>
        </tree>
      </field>
    </record>

    <!-- purchaser action window -->
    <record id="scope_of_supply_action" model="ir.actions.act_window">
      <field name="name">Scope Of Supply</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">scope.of.supply</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          No Data
        </p>
        <p>
          Silahkan masukkan data 
        </p>
      </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="scope_of_supply_menu_act" name="Scope of Supply" parent="master_data_menu_root" action="scope_of_supply_action" sequence="1"/>
    <menuitem id="scope_of_supply_menu_act_2" name="Scope of Supply" parent="master_data_menu_root_2" action="scope_of_supply_action" sequence="1"/>

  </data>
</odoo>
<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="inherit_purchase_order_form" model="ir.ui.view">
    <field name="name">inherit.purchase.order.form</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form" />
    <field name="arch" type="xml">
      <field name="partner_ref" position="after">
        <field name="purchase_id"/>
        <field name="purchase_ids" widget="many2many_tags" options="{'no_create_edit': True}" invisible="1"/>
      </field>
      <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
        <field name="purchase_request_code"/>
      </xpath>
    </field>
  </record>
</odoo>
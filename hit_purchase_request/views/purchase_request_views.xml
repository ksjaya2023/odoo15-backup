<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

      <record id="reservation_inherit_purchase_request" model="ir.ui.view">
        <field name="name">purchase.request.view.form.inherit</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
          <xpath expr="/form/sheet/group/group[3]" position="after">
            <group name="reservation">
              <field name="purchase_order_id" />
              <field name="reservation_id" />
              <field name="purchase_type" />
              <field name="request_type" invisible="1"/>
              <field name="request_number" invisible="1"/>
              <field name="rfq" invisible="1"/>
              <field name="create_by_issue" invisible="1"/>
              <field name="create_by_reservasi" invisible="1"/>
              <field name="create_rfq" invisible="1"/>
            </group>
          </xpath>
        </field>
      </record>  
      

    </data>
</odoo>
